@import './global.styl'

.report-content
  color #4a4a4a
  padding-left 20px
  padding-right 20px
  padding-bottom 42px
  position relative
  background-color #f5f4f5
  // @media (min-width $mobile)
  //   padding-left 100px
  //   padding-right 100px
  @media (min-width 640px)
    padding-left 0
    padding-right 0
  @media (min-width $mobile)
    padding-bottom 55px
  @media (min-width $tablet)
    padding-top 50px
  &__wrapper
    max-width 600px
    margin-left auto
    margin-right auto
  & h2
    font-size 2.1rem
    font-weight 300
    margin-bottom 20px
    line-height normal
  & p
    font-size 1.5rem
    line-height 1.87
    & + p
      margin-top 28px