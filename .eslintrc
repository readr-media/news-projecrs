{
  "extends": [
    "standard",
    "plugin:vue/recommended",
    "plugin:import/errors"
  ],
  // If you want to use custom parsers such as babel-eslint or @typescript-eslint/parser,
  // you have to use parserOptions.parser option instead of parser option. 
  // ref: https://eslint.vuejs.org/user-guide/#usage
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "plugins": [
    "vue"
  ],
  "rules": {
    "vue/attribute-hyphenation": ["error", "never"]
  },
  "globals": {
    "location": true,
    "source": true
  },
  "env": {
    "es6": true,
    "node": true
  }
}